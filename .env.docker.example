# Environment Variables for Docker Compose
# Copy this to .env and customize

# PostgreSQL
POSTGRES_PASSWORD=jirsi_secure_password_change_me
POSTGRES_DB=jirsi_db
POSTGRES_USER=jirsi

# Redis
REDIS_PASSWORD=redis_secure_password_change_me

# pgAdmin (dev only)
PGADMIN_PASSWORD=admin_change_me

# Application
DATABASE_URL=postgres://jirsi:jirsi_secure_password_change_me@localhost:5432/jirsi_db
REDIS_URL=redis://:redis_secure_password_change_me@localhost:6379

# Server
PORT=8080
HOST=0.0.0.0

# JWT
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_change_me_in_production

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
ENABLE_EVENT_SOURCING=true
ENABLE_CACHING=true
