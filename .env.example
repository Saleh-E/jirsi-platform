# Environment Variables Template
# Copy this to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://jirsi:changeme@localhost:5432/jirsi_dev
DATABASE_POOL_SIZE=10

# Production database (commented out by default)
# DATABASE_URL=postgresql://jirsi:STRONG_PASSWORD@postgres:5432/jirsi_prod
# DATABASE_POOL_SIZE=20

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8080
ENVIRONMENT=development
RUST_LOG=debug

# Production settings
# ENVIRONMENT=production
# RUST_LOG=info

# ============================================
# Security (CHANGE THESE!)
# ============================================
# Generate with: openssl rand -base64 32
SECRET_KEY=CHANGE-ME-USE-OPENSSL-RAND-BASE64-32
JWT_SECRET=CHANGE-ME-USE-OPENSSL-RAND-BASE64-32

# Session timeout (seconds)
SESSION_TIMEOUT=3600

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:8081,http://localhost:8080
# Production:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Frontend Configuration
# ============================================
TRUNK_SERVE_ADDRESS=0.0.0.0:8081
TRUNK_PUBLIC_URL=/

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================
# File Storage (Optional)
# ============================================
STORAGE_TYPE=local
# Options: local, s3

# Local storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# S3 storage (if STORAGE_TYPE=s3)
S3_BUCKET=jirsi-uploads
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
AWS_ACCESS_KEY_ID=your-key
AWS_SECRET_ACCESS_KEY=your-secret

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ============================================
# Feature Flags
# ============================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR=false

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
# Production: LOG_FORMAT=json

# ============================================
# Monitoring (Optional)
#============================================
SENTRY_DSN=
PROMETHEUS_ENABLED=false
METRICS_PORT=9090

# ============================================
# Docker-specific (for docker-compose)
# ============================================
# Uncomment for Docker deployment
# DB_PASSWORD=generate-strong-password
# POSTGRES_DB=jirsi_prod
# POSTGRES_USER=jirsi
