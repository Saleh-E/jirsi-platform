# Jirsi Platform - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgres://jirsi:jirsi@localhost:5432/jirsi
DATABASE_POOL_SIZE=10

# Redis (for circuit breaker, rate limiting, caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24

# =============================================================================
# OpenAI (AI Chat, Embeddings, Whisper)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# Twilio (SMS + Voice)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_API_KEY=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_SECRET=your-twilio-api-secret
TWILIO_TWIML_APP_SID=APxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# SendGrid (Email)
# =============================================================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@jirsi.com
SENDGRID_FROM_NAME=Jirsi Platform

# =============================================================================
# Stripe (Payments)
# =============================================================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# Meta WhatsApp Cloud API
# =============================================================================
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# =============================================================================
# Application
# =============================================================================
APP_BASE_URL=https://app.jirsi.com
RUST_LOG=info
PORT=8080

# =============================================================================
# Fly.io (optional - for edge deployment)
# =============================================================================
FLY_REGION=ams
FLY_PRIMARY_REGION=ams
DATABASE_URL_US=postgres://...  # US read replica
DATABASE_URL_ASIA=postgres://...  # Asia read replica
